<h2>Add a task:</h2>
<%= form_for([@list, @list.tasks.build]) do |f| %>
<div class="field">
  <%= f.label :description %><br>
  <%= f.text_area :description %>
  </div>
  <div class="field">
  <%= f.label :duedate %><br>
  <%= f.datetime_select :duedate, {include_blank: true, default: nil} %>
  </div>
  

  <div class="field">
    <%= f.label :tag_list, "Tags (separated by commas)" %><br />
    <%= f.text_field :tag_list %>
  </div>



  <div class="actions">
  <%= f.submit %>
  </div>
<% end %>