<h3 style="text-align: right"><%= link_to '', new_list_path, { :class => "glyphicon glyphicon-plus" } %></h3>
<h3>To-do lists</h3>
	<% @lists.each do |list| %>
		<div class="panel panel-info">
			<div class="panel-heading">

				<h3 class="panel-title"><%= link_to "#{ list.title }", list %></h3>

					<div style="text-align:right">
					<%= link_to '', edit_list_path(list), 
												:class => "glyphicon glyphicon-pencil",
												:style => "width:100%; text-align:right; color:grey; display:inline; margin-right:6px" %>
					<%= link_to '', list_path(list), 
												method: :delete,
												:class => "glyphicon glyphicon-remove",
												:style => "width:100%; text-align:right; color:#C4002E; display:inline",
												data: { confirm: 'Are you sure you want to delete this?' } %>					
					</div>								
			</div>
			
			<div class="panel-body">
				<%= list.text %>
			</div>
		</div>
	<% end %>

<% if @lists.blank? %>
	<div class="well">Your list seems to be empty. Click on the + sign to create a new list.</div>
<% end %>

